{
	"Configuration": {
		"name": "default",
		"properties": {
			"property": [
				{
					"name": "log-path",
					"value": "logs"
				},
				{
					"name": "archive",
					"value": "${log-path}/archive"
				}
			]
		},
		"Appenders": {
			"Console": {
				"PatternLayout": {
					"pattern": "[%-5level] %d{yyyy-MM-dd HH:mm:ss.SSS} [%t] %c{1} - %msg%n"
				},
				"name": "Console-Appender",
				"target": "SYSTEM_OUT"
			},
			"RollingFile": {
				"name": "RollingFile-Appender",
				"fileName": "${log-path}/app.log",
				"filePattern": "${archive}/app-backup-%d{MMddyyyy-HHmmss}-%i.log.gz",
				"PatternLayout": {
					"pattern": "[%-5level] %d{yyyy-MM-dd HH:mm:ss.SSS} [%t] %c{1} - %msg%n"
				},
				"Policies": {
					"SizeBasedTriggeringPolicy": {
						"size": "100 MB"
					}
				},
				"DefaultRolloverStrategy": {
					"max": "10"
				}
			},
			"File": {
				"name": "File-Appender",
				"filename": "${log-path}/logfile.log",
				"PatternLayout": {
					"pattern": "[%-5level] %d{yyyy-MM-dd HH:mm:ss.SSS} [%t] %c{1} - %msg%n"
				}
			}
		},
		"Loggers": {
			"logger": {
				"name": "org.springframework.core",
				"level": "info",
				"additivity": "false",
				"appender-ref": [
					{
						"ref": "RollingFile-Appender",
						"level": "info"
					},
					{
						"ref": "Console-Appender",
						"level": "info"
					}
				]
			},
			"logger": {
				"name": "org.springframework.core",
				"level": "info",
				"additivity": "false",
				"appender-ref": [
					{
						"ref": "RollingFile-Appender",
						"level": "info"
					},
					{
						"ref": "Console-Appender",
						"level": "info"
					}
				]
			},
			"logger": {
				"name": "org.springframework.scheduling.quartz",
				"level": "error",
				"additivity": "false",
				"appender-ref": [
					{
						"ref": "RollingFile-Appender",
						"level": "error"
					},
					{
						"ref": "Console-Appender",
						"level": "error"
					}
				]
			},
			"Root": {
				"AppenderRef": [
					{
						"ref": "Console-Appender"
					},
					{
						"ref": "RollingFile-Appender"
					},
					{
						"ref": "File-Appender"
					}
				],
				"level": "info"
			}
		}
	}
}